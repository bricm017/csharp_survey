@{
    ViewData["Title"] = "Home Page";
}
@model User

<h1>Welcome New Ninja!</h1>
<form action="postForm" method="post">
    <div class="form-group">
        <label for="">Name:</label>
        <input class="form-control" asp-for="name">
        <span class="text-danger" asp-validation-for="name"></span>
    </div>
    <div class="form-group">
        <label for="">Dojo Location:</label>
        <label for="inputLocation">Dojo Location:</label>
        <select class="form-control" asp-for="location">
            <option value="">Select your Location</option>
            <option value="Chicago">Chicago</option>
            <option value="Los Angeles">Los Angeles</option>
            <option value="New York">New York</option>
            <option value="Seattle">Seattle</option>
            <option value="Orlando">Orlando</option>
        </select>
        <span class="text-danger" asp-validation-for="location"></span>
    </div>
    <div class="form-group">
        <label for="">Favorite Language:</label>
        <input class="form-control" asp-for="language">
        <span class="text-danger" asp-validation-for="language"></span>
    </div>
    <div class="form-group">
        <label for="">Comment:</label>
        <input class="form-control" asp-for="comment">
        <span class="text-danger" asp-validation-for="comment"></span>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>